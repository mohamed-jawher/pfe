        <script>
              const artisans = {{{json artisans}}};
            let currentView = 'grid';
            let currentPage = 1;
            const itemsPerPage = 9;
            let totalItems = {{#if artisans}}{{artisans.length}}{{else}}0{{/if}};
            let totalPages = Math.ceil(totalItems / itemsPerPage);
       
         
           function toggleView(view) {
  const gridContainer = document.getElementById('gridContainer');
  const listContainer = document.getElementById('listContainer');
  const gridViewBtn = document.getElementById('gridView');
  const listViewBtn = document.getElementById('listView');

  currentView = view;

  const isGrid = view === 'grid';
  gridContainer.classList.toggle('hidden', !isGrid);
  listContainer.classList.toggle('hidden', isGrid);
  gridViewBtn.classList.toggle('active', isGrid);
  listViewBtn.classList.toggle('active', !isGrid);

  updatePagination();
}

        
            function updatePagination() {
                const start = (currentPage - 1) * itemsPerPage + 1;
                const end = Math.min(currentPage * itemsPerPage, totalItems);
                
                document.getElementById('startCount').textContent = start;
                document.getElementById('endCount').textContent = end;
                document.getElementById('totalCount').textContent = totalItems;
        
                const paginationNumbers = document.getElementById('paginationNumbers');
                paginationNumbers.innerHTML = '';
        
                // Add pagination numbers
                for (let i = 1; i <= totalPages; i++) {
                    if (
                        i === 1 || // First page
                        i === totalPages || // Last page
                        (i >= currentPage - 1 && i <= currentPage + 1) // Pages around current page
                    ) {
                        const button = document.createElement('button');
                        button.className = `relative inline-flex items-center px-4 py-2 text-sm font-semibold ${
                            i === currentPage 
                                ? 'bg-yellow-500 text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-600' 
                                : 'text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0'
                        }`;
                        button.textContent = i;
                        button.onclick = () => goToPage(i);
                        paginationNumbers.appendChild(button);
                    } else if (
                        (i === 2 && currentPage > 3) || 
                        (i === totalPages - 1 && currentPage < totalPages - 2)
                    ) {
                        // Add ellipsis
                        const ellipsis = document.createElement('span');
                        ellipsis.className = 'relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300';
                        ellipsis.textContent = '...';
                        paginationNumbers.appendChild(ellipsis);
                    }
                }
        
                // Update visibility of items
                const items = currentView === 'grid' 
                    ? document.querySelectorAll('#gridContainer .artisan-card')
                    : document.querySelectorAll('#listContainer tbody tr');
        
                items.forEach((item, index) => {
                    const shouldShow = index >= (currentPage - 1) * itemsPerPage && index < currentPage * itemsPerPage;
                    item.style.display = shouldShow ? '' : 'none';
                });
            }
        
            function previousPage() {
                if (currentPage > 1) {
                    currentPage--;
                    updatePagination();
                }
            }
        
            function nextPage() {
                if (currentPage < totalPages) {
                    currentPage++;
                    updatePagination();
                }
            }
        
            function goToPage(page) {
                currentPage = page;
                updatePagination();
            }
        
            // Initialize pagination on load
            document.addEventListener('DOMContentLoaded', () => {
                updatePagination();
            });
        </script>
